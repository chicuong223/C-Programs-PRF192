void Circle(float r){
	float p = 3.14*2*r;
	float a = r*r*3.14;
	printf("Perimeter: %.2f\n", p);
	printf("Area: %.2f\n", a);
}

void Rectangle(float w, float l){
	float p = 2*(w+l);
	float a = w*l;
	printf("Perimeter: %.2f\n", p);
	printf("Area: %.2f\n", a);
}

void Diamond(float s, float d1, float d2){
	float p = 4*s;
	float a = (d1 * d2)/2;
	printf("Perimeter: %.2f\n", p);
	printf("Area: %.2f\n", a);
}

